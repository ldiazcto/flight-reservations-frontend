<resources>

    <style name="FlightOptionTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FlightInfoTextStyle" parent="FlightOptionTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="datePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">#673AB7</item>
        <item name="android:buttonBarButtonStyle">@style/MyButtonBarButtonStyle</item>
    </style>

    <style name="MyButtonBarButtonStyle" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#673AB7</item>
    </style>

</resources>
