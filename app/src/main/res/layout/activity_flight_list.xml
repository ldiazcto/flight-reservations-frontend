<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flightsapp.activities.FlightListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flightList_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnFlightSelected_relativeLayout"
    />

    <RelativeLayout
        android:id="@+id/btnFlightSelected_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#C2C2C2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFlightSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:text="Continuar"
            android:layout_centerHorizontal="true"
        />
    </RelativeLayout>
</RelativeLayout>